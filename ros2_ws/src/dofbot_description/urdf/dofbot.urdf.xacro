<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dofbot">

  <!-- ============ Material definitions ============ -->
  <material name="grey">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>
  <material name="green">
    <color rgba="0 0.7 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <!-- ============ Macro for inertial blocks ============ -->
  <xacro:macro name="add_inertial" params="mass ixx iyy izz">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass}"/>
      <inertia
        ixx="${ixx}" ixy="0.0" ixz="0.0"
        iyy="${iyy}" iyz="0.0"
        izz="${izz}"/>
    </inertial>
  </xacro:macro>

  <!-- ============ Links & Joints ============ -->
  <link name="base_link">
    <xacro:add_inertial mass="1.0" ixx="0.1" iyy="0.1" izz="0.1"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/base_link.dae"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/base_link.dae"/>
      </geometry>
    </collision>
  </link>

  <link name="link1">
    <xacro:add_inertial mass="0.8" ixx="0.08" iyy="0.08" izz="0.08"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link1.dae"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link1.dae"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child  link="link1"/>
    <origin xyz="0 0 0.064" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1"/>
  </joint>

  <link name="link2">
    <xacro:add_inertial mass="0.6" ixx="0.06" iyy="0.06" izz="0.06"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link2.dae"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link2.dae"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="0 0 0.0435" rpy="0 1.5708 0"/>
    <axis  xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1"/>
  </joint>

  <link name="link3">
    <xacro:add_inertial mass="0.5" ixx="0.05" iyy="0.05" izz="0.05"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link3.dae"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link3.dae"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child  link="link3"/>
    <origin xyz="-0.08285 0 0" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1"/>
  </joint>

  <link name="link4">
    <xacro:add_inertial mass="0.4" ixx="0.04" iyy="0.04" izz="0.04"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link4.dae"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link4.dae"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child  link="link4"/>
    <origin xyz="-0.08285 0 0" rpy="0 0 0"/>
    <axis  xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1"/>
  </joint>

  <link name="link5">
    <xacro:add_inertial mass="0.3" ixx="0.03" iyy="0.03" izz="0.03"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link5.dae"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///ros2_ws/install/share/dofbot_description/meshes/link5.dae"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child  link="link5"/>
    <origin xyz="-0.07385 -0.00215 0" rpy="0 -1.5708 0"/>
    <axis  xyz="0 0 1"/>
    <limit lower="-1.5708" upper="3.1416" effort="100" velocity="1"/>
  </joint>

  <!-- ============ Transmissions ============ -->
  <transmission name="trans_joint1">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_joint1">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </actuator>
    <joint     name="joint1">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <transmission name="trans_joint2">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_joint2">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </actuator>
    <joint     name="joint2">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <transmission name="trans_joint3">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_joint3">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </actuator>
    <joint     name="joint3">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <transmission name="trans_joint4">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_joint4">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </actuator>
    <joint     name="joint4">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <transmission name="trans_joint5">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_joint5">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </actuator>
    <joint     name="joint5">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <!-- ============ ros2_control interface ============ -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="joint1">
      <command_interface name="position"/>
      <state_interface   name="position"/>
      <state_interface   name="velocity"/>
    </joint>
    <joint name="joint2">
      <command_interface name="position"/>
      <state_interface   name="position"/>
      <state_interface   name="velocity"/>
    </joint>
    <joint name="joint3">
      <command_interface name="position"/>
      <state_interface   name="position"/>
      <state_interface   name="velocity"/>
    </joint>
    <joint name="joint4">
      <command_interface name="position"/>
      <state_interface   name="position"/>
      <state_interface   name="velocity"/>
    </joint>
    <joint name="joint5">
      <command_interface name="position"/>
      <state_interface   name="position"/>
      <state_interface   name="velocity"/>
    </joint>
  </ros2_control>

  <!-- ============ Gazebo ros2_control plugin ============ -->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so"
            name="gazebo_ros2_control">
      <robotNamespace>/</robotNamespace>
      <controlPeriod>0.01</controlPeriod>
      <parameters>$(find dofbot_description)/config/controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
